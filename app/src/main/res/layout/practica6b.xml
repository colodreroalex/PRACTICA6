<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_2">

    <View
        android:id="@+id/viewV"
        android:layout_width="5dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#000000"
        />

    <View
        android:id="@+id/viewH"
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/viewV"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewV"
        android:background="@color/black"/>

    <ImageView
        android:id="@+id/imageDolar"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="136dp"
        app:layout_constraintStart_toStartOf="@+id/viewH"
        app:layout_constraintTop_toTopOf="@+id/viewV"
        app:srcCompat="@drawable/ic_pig_1"
        app:tint="@color/white"

        />

    <ImageView
        android:id="@+id/imageCentral"
        android:layout_width="206dp"
        android:layout_height="213dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/viewH"
        app:layout_constraintStart_toStartOf="@+id/viewH"
        app:layout_constraintTop_toTopOf="@+id/viewV"
        app:srcCompat="@drawable/dinero" />


</androidx.constraintlayout.widget.ConstraintLayout>