<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_2">

    <View
        android:id="@+id/viewV"
        android:layout_width="5dp"
        android:layout_height="wrap_content"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/viewH"
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/viewV"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewV"
        android:background="@color/black"/>

    <ImageView
        android:id="@+id/imageDolar"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="136dp"
        app:layout_constraintStart_toStartOf="@+id/viewH"
        app:layout_constraintTop_toTopOf="@+id/viewV"
        app:srcCompat="@drawable/ic_pig_1"
        app:tint="@color/white"

        />

    <ImageView
        android:id="@+id/imageCentral"
        android:layout_width="206dp"
        android:layout_height="213dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/viewH"
        app:layout_constraintStart_toStartOf="@+id/viewH"
        app:layout_constraintTop_toTopOf="@+id/viewV"
        app:srcCompat="@drawable/dinero" />

    <TextView
        android:id="@+id/sendmoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:backgroundTint="@color/white"
        android:text="SEND MONEY"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/viewV"
        app:layout_constraintTop_toBottomOf="@+id/imageDolar" />

    <ImageView
        android:id="@+id/imageDolarRelleno"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_marginTop="135dp"
        android:layout_marginEnd="65dp"
        app:tint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewV"
        app:srcCompat="@drawable/ic_pig_2" />

    <TextView
        android:id="@+id/requestMoney"
        android:layout_width="119dp"
        android:layout_height="27dp"
        android:layout_marginEnd="30dp"
        android:text="REQUEST MONEY"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageDolarRelleno" />

    <ImageView
        android:id="@+id/imageQr"
        android:layout_width="46dp"
        android:layout_height="42dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageCentral"
        app:srcCompat="@drawable/ic_pig_3"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/textScanQr"
        android:layout_width="89dp"
        android:layout_height="21dp"
        android:layout_marginStart="50dp"
        android:text="SCAN TO PAY"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageQr" />

    <ImageView
        android:id="@+id/imageReview"
        android:layout_width="44dp"
        android:layout_height="43dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageCentral"
        app:srcCompat="@drawable/ic_pig_4"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/textReview"
        android:layout_width="109dp"
        android:layout_height="37dp"
        android:layout_marginEnd="40dp"
        android:text="REVIEW YOUR TRANSACTIONS"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageReview" />


</androidx.constraintlayout.widget.ConstraintLayout>